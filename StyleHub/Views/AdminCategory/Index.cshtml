@model List<StyleHub.Models.Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout_Style_hub.cshtml";
}
<div class="container mt-4">

<h2 class="mt-4 mb-3">All Categories</h2>
<a class="btn btn-success mb-3" asp-action="Create">+ Add Category</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Photo</th>
            <th>Color</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                    {
                        <img src="@item.PhotoPath" width="100" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td style="background:@item.Back_Color">@item.Back_Color</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>