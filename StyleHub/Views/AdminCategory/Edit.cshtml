@model StyleHub.Models.AdminCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Style_hub.cshtml";

}
<div class="container mt-4">

<h2>Edit Category</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Photo">New Image (optional)</label>
        <input asp-for="Photo" class="form-control" type="file" />
    </div>
    <div class="form-group">
        <label asp-for="Back_Color">Background Color</label>
        <input asp-for="Back_Color" class="form-control" type="text" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
</form>

</div>
