@model List<Product>

<section id="best-sellers" class="best-sellers section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Best Sellers</h2>
        <p>Top-rated products selected just for you</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row g-5">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="product-item">
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(product.Badge))
                            {
                                <div class="product-badge">@product.Badge</div>
                            }

                            <img src="@product.Images.FirstOrDefault()" alt="@product.Name" class="img-fluid" loading="lazy" />

                            <div class="product-actions">
                                <button class="action-btn wishlist-btn">
                                    <i class="bi bi-heart"></i>
                                </button>
                                <button class="action-btn compare-btn">
                                    <i class="bi bi-arrow-left-right"></i>
                                </button>
                                <button class="action-btn quickview-btn">
                                    <i class="bi bi-zoom-in"></i>
                                </button>
                            </div>

                            <button class="cart-btn">Select Options</button>
                        </div>

                        <div class="product-info">
                            <div class="product-category">@product.Category?.Name</div>
                            <h4 class="product-name">
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })">
                                    @product.Name
                                </a>
                            </h4>

                            <div class="product-rating">
                                <div class="stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= (int)Math.Floor(product.Rating))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>
                                <span class="rating-count">(@product.Review)</span>
                            </div>

                            <div class="product-price">
                                $@product.Price.ToString("F2")
                            </div>

                            <div class="color-swatches">
                                @if (!string.IsNullOrEmpty(product.Color))
                                {
                                    <span class="swatch active" style="background-color: @product.Color;"></span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
