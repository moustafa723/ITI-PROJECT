                </div>
            </div>

            <div class="col-lg-5">
                <!-- Order Summary -->
                <div class="order-summary" data-aos="fade-left" data-aos-delay="200">
                    <div class="order-summary-header">
                        <h3>Order Summary</h3>
                        @{
                            var distinctItems = Model?.Cart.CartItems?.Count ?? 0;
                        }
                        <span class="item-count">
                            @distinctItems @(distinctItems == 1 ? "Product" : "Items")
                        </span>
                    </div>

                    <div class="order-summary-content">

                        <div class="order-summary-content">
                            <div class="order-items">
                                @foreach (var item in Model.Cart.CartItems)
                                {
                                    <div class="order-item" id="order-item-@item.Id">
                                        <div class="order-item-image">
                                            <!-- شيل الـ ; وخلي في حالة عدم وجود صورة يركّب Placeholder -->
                                            <img src="@(item.Product.Images?.FirstOrDefault() ?? Url.Content("~/images/placeholder.png"))"
                                                 alt="@item.Product.Name" class="img-fluid" />
                                        </div>

                                        <div class="order-item-details">
                                            <h4>@item.Product.Name</h4>

                                            <p class="order-item-variant">
                                                Color: @item.Product.Color | Size: @item.Product.Size
                                            </p>

                                            <div class="order-item-price">
                                                <span class="quantity">@item.Quantity ×</span>
                                                <span class="price">$@item.Product.Price.ToString("0.00")</span>
                                                <span class="line-total">= $@((item.Quantity * item.Product.Price).ToString("0.00"))</span>
                                            </div>

                                            <!-- زرار الحذف: بيبعت DELETE على /api/CartItem/{id} -->
                                            <button type="button"
                                                    class="btn btn-danger btn-sm js-remove"
                                                    data-id="@item.Id">
                                                Remove
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>



