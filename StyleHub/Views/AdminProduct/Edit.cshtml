@model StyleHub.Models.ProductVmAdmin

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Style_hub.cshtml";

}
<div class="container mt-4">

<h1>Edit</h1>

<h4>Product</h4>


<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <!-- باقي الحقول نفس create -->
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Size"></label>
            <input asp-for="Size" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Review"></label>
            <input asp-for="Review" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="InStock"></label>
            <input asp-for="InStock" class="form-check-input" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="Badge"></label>
            <input asp-for="Badge" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="OldPrice"></label>
            <input asp-for="OldPrice" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
        </div>
    <div class="form-group">
        <label asp-for="Images">New Images (optional)</label>
        <input asp-for="Images" class="form-control" type="file" multiple />
        <small class="form-text text-muted">Upload to replace old images</small>
    </div>
        <div class="form-group">
            <label asp-for="Alts"></label>
            <input asp-for="Alts" class="form-control" />
        </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class="form-control">
                <option value="">-- Select Category --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>

</div>